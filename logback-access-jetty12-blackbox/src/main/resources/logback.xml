<configuration debug="false">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are  by default assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
        <encoder>
            <pattern>ABCCCCC %d [%thread] %-5level %logger{36} -%kvp- %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.eclipse.jetty.util.component.ContainerLifeCycle" level = "INFO" />
    <logger name="org.eclipse.jetty.util.component.AbstractLifeCycle" level = "INFO" />
    <logger name="org.eclipse.jetty.util.thread.QueuedThreadPool" level = "INFO" />
    <logger name="org.eclipse.jetty.util.ConcurrentPool" level = "INFO" />

    util.thread.QueuedThreadPool
    <logger name="org.eclipse.jetty.io.ManagedSelector" level = "INFO" />
    <logger name="org.eclipse.jetty.io.ManagedSelector" level = "INFO" />
    <logger name="org.eclipse.jetty" level = "INFO" />

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>